        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <UserSecretsId>8b0849b6-25b3-44a3-8a5d-fc97d9d8a001</UserSecretsId>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Flurl" Version="4.0.0"/>
